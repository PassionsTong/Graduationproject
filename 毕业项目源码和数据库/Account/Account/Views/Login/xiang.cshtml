
@{
    ViewBag.Title = "xiang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using Account.Models
@{
    Student stu = Session["Sjh"] as Student;
}
<div>
    <h2>学生信息</h2>
    <hr />
    <dl class="dl-horizontal ">
        <dt>
            姓名：
        </dt>

        <dd>
            @stu.StuName
        </dd>

        <dt>
            登录名：
        </dt>

        <dd>
            @stu.StuLoginName
        </dd>

        <dt>
            密码：
        </dt>

        <dd>
            @stu.StuLoginPwd
        </dd>

        <dt>
            性别：
        </dt>

        <dd>
            @if (stu.StuSex == 0)
            {
                @:男
            }
            else
            {
                @:女

            }
        </dd>

        <dt>
            电话：
        </dt>

        <dd>
            @stu.StuPhone
        </dd>

        <dt>
            Email：
        </dt>

        <dd>
            @stu.StuEmail
        </dd>

        <dt>
            班级：
        </dt>

        <dd>
            @stu.StuGrade
        </dd>

    </dl>
</div>
<p>
    <a href="/Login/Edit/@stu.StuID" class="btn btn-primary">编辑</a>  
</p>


